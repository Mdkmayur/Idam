generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CountryCode {
  INDIA
  SRILANKA
}

enum MediaType {
  IMAGE
  VIDEO
}

enum UserRole {
  ADMIN
  EDITOR
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String
  role         UserRole @default(EDITOR)
  createdAt    DateTime @default(now())
  sessions     Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Division {
  id          String      @id @default(cuid())
  country     CountryCode
  name        String
  slug        String
  tagline     String
  description String
  icon        String?
  sortOrder   Int         @default(0)
  createdAt   DateTime    @default(now())

  projects    Project[]
  albums      Album[]

  @@unique([country, slug], name: "country_division_slug")
}

model Project {
  id          String      @id @default(cuid())
  country     CountryCode
  divisionId  String
  title       String
  slug        String
  summary     String
  description String
  location    String?
  heroUrl     String?
  tags        Json
  sortOrder   Int         @default(0)
  isFeatured  Boolean     @default(false)
  createdAt   DateTime    @default(now())

  division    Division    @relation(fields: [divisionId], references: [id])
  media       ProjectMedia[]
  views       ProjectView[]

  @@unique([country, slug], name: "country_project_slug")
  @@unique([divisionId, slug], name: "division_project_slug")
}

model Album {
  id         String      @id @default(cuid())
  country    CountryCode
  divisionId String
  title      String
  slug       String
  description String
  sortOrder  Int         @default(0)
  createdAt  DateTime    @default(now())

  division   Division    @relation(fields: [divisionId], references: [id], onDelete: Cascade)
  media      AlbumMedia[]

  @@unique([country, slug], name: "country_album_slug")
  @@unique([divisionId, slug], name: "division_album_slug")
}

model AlbumMedia {
  id        String    @id @default(cuid())
  albumId   String
  type      MediaType
  url       String
  caption   String?
  sortOrder Int       @default(0)
  createdAt DateTime  @default(now())

  album     Album     @relation(fields: [albumId], references: [id], onDelete: Cascade)

  @@index([albumId])
}

model ProjectMedia {
  id        String    @id @default(cuid())
  projectId String
  type      MediaType
  url       String
  caption   String?
  sortOrder Int       @default(0)
  createdAt DateTime  @default(now())

  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Enquiry {
  id        String      @id @default(cuid())
  country   CountryCode
  name      String
  email     String
  phone     String?
  division  String?
  message   String
  createdAt DateTime    @default(now())

  @@index([country])
  @@index([createdAt])
}

model Visitor {
  id        String   @id @default(cuid())
  token     String   @unique
  createdAt DateTime @default(now())
  views     ProjectView[]
}

model ProjectView {
  id        String      @id @default(cuid())
  projectId String
  country   CountryCode
  visitorId String
  viewedAt  DateTime    @default(now())

  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  visitor   Visitor     @relation(fields: [visitorId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([viewedAt])
}
